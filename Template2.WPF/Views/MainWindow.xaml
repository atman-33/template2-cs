<Window x:Class="Template2.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="800" Width="1200" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:system="clr-namespace:System;assembly=netstandard"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource backColor}">

    <Window.Resources>
        <system:Double x:Key="menuFontSize">12</system:Double>
        <system:Double x:Key="menuIconSize">30</system:Double>
        <system:Double x:Key="menuButtonHeight">60</system:Double>
    </Window.Resources>

    <Grid>
        <DockPanel LastChildFill="True">
            <materialDesign:ColorZone DockPanel.Dock="Top"
                                      Padding="5"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                      Mode="PrimaryDark"
                                      Height="50">
                <DockPanel VerticalAlignment="Center">
                    <StackPanel DockPanel.Dock="Right" VerticalAlignment="Center" Orientation="Horizontal">

                        <Label Content="ver 0.0.1"
                                   Foreground="White"
                                   FontSize="14" VerticalAlignment="Center" 
                                   VerticalContentAlignment="Center"/>

                        <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges" BorderBrush="Transparent">
                            <ListBox>
                                <ListBoxItem Content="Hello World" />
                                <ListBoxItem Content="Nice Popup" />
                                <ListBoxItem Content="Goodbye" />
                            </ListBox>
                        </materialDesign:PopupBox>

                    </StackPanel>

                    <StackPanel>
                        <DockPanel LastChildFill="True">
                            <ToggleButton x:Name="MenuToggleButton"
                                          AutomationProperties.Name="HamburgerToggleButton"
                                          IsChecked="True"
                                          Style="{StaticResource MaterialDesignActionToggleButton}"
                                          Content="{materialDesign:PackIcon Kind=Menu, Size=30}"
                                          materialDesign:ToggleButtonAssist.OnContent="{materialDesign:PackIcon Kind=Menu,Size=30}"
                                          DockPanel.Dock="Left" Cursor="Hand"
                                          Background="Transparent"
                                          Height="30" Width="80"/>

                            <Button Style="{StaticResource MaterialDesignFlatButton}" Cursor="Hand">
                                <materialDesign:PackIcon Kind="Home" 
                                                             VerticalAlignment="Center"
                                                             Foreground="White" Cursor="Hand"
                                                             Width="30"
                                                             Height="30"/>
                            </Button>

                            <TextBlock Margin="16,0,0,0"
                                           FontSize="20"
                                           Text="C# WPF Prism テンプレートアプリ2" 
                                           VerticalAlignment="Center"
                                           DockPanel.Dock="Right" 
                                           HorizontalAlignment="Center" FontWeight="Bold"/>
                        </DockPanel>


                    </StackPanel>

                </DockPanel>
            </materialDesign:ColorZone>

            <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}" 
                                       DockPanel.Dock="Left">
                <materialDesign:DrawerHost.LeftDrawerContent>
                    <StackPanel Cursor="Hand">
                        <StackPanel Margin="5"
                                    HorizontalAlignment="Center"
                                    Width="80">

                            <Button Width="Auto"
                                    Height="{StaticResource menuButtonHeight}"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Cursor="Hand" HorizontalAlignment="Center"
                                    Command="{Binding Sample001ViewButton}">
                                <DockPanel>
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="Table" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                                                 Width="{StaticResource menuIconSize}" 
                                                                 Height="{StaticResource menuIconSize}"/>
                                        <TextBlock Text="サンプル1" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                   FontSize="{StaticResource menuFontSize}"/>
                                    </StackPanel>
                                </DockPanel>
                            </Button>

                            <Button Width="Auto"
                                    Height="{StaticResource menuButtonHeight}"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Cursor="Hand" HorizontalAlignment="Center"
                                    Command="{Binding XXXButton}">
                                <DockPanel>
                                    <StackPanel>
                                        <materialDesign:PackIcon Kind="Multimedia" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                                                 Width="{StaticResource menuIconSize}" 
                                                                 Height="{StaticResource menuIconSize}"/>
                                        <TextBlock Text="サンプルX" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                   FontSize="{StaticResource menuFontSize}"/>
                                    </StackPanel>
                                </DockPanel>
                            </Button>


                        </StackPanel>
                    </StackPanel>
                </materialDesign:DrawerHost.LeftDrawerContent>

            </materialDesign:DrawerHost>

            <materialDesign:ColorZone DockPanel.Dock="Top" Background="Gainsboro" Height="30" Margin="0,0.5,0,0"
                                      Padding="10,0">
                <Label Content="{Binding ViewOutline}"
                       VerticalAlignment="Center"/>

            </materialDesign:ColorZone>

            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <ContentControl prism:RegionManager.RegionName="ContentRegion" />
            </ScrollViewer>

        </DockPanel>
    </Grid>
</Window>
